

@if (ShowDialog)
{

    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Aggiungi Anagrafica</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Anagrafica" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            @*<label for="nome">Nome: </label>*@
                            <InputText id="nome" class="form-control" @bind-Value="@Anagrafica.Nome" placeholder="Nome"></InputText>
                            <ValidationMessage For="@(() => @Anagrafica.Nome)" />
                        </div>

                        <div class="form-group">
                            @*<label for="cognome">Cognome: </label>*@
                            <InputText id="cognome" class="form-control" @bind-Value="@Anagrafica.Cognome" placeholder="Cognome"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.Cognome)" />
                        </div>

                        <div class="form-group">
                            @*<label for="dug">DUG: </label>*@
                            <InputText id="dug" class="form-control" @bind-Value="@Anagrafica.DUG" placeholder="Dug"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.DUG)" />
                        </div>

                        <div class="form-group">
                            @*<label for="dug">Toponimo: </label>*@
                            <InputText id="toponimo" class="form-control" @bind-Value="@Anagrafica.Toponimo" placeholder="Toponimo"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.Toponimo)" />
                        </div>

                        <div class="form-group">
                            @*<label for="dug">Numero civico: </label>*@
                            <InputText id="numeroCivico" class="form-control" @bind-Value="@Anagrafica.NumeroCivico" placeholder="Civico"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.NumeroCivico)" />
                        </div>

                        <div class="form-group">
                            @*<label for="dug">Città: </label>*@
                            <InputText id="citta" class="form-control" @bind-Value="@Anagrafica.Citta" placeholder="Città"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.Citta)" />
                        </div>

                        <div class="form-group">
                            @*<label for="cap">Cap: </label>*@
                            <InputText id="cap" class="form-control" @bind-Value="@Anagrafica.Cap" placeholder="Cap"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.Cap)" />
                        </div>

                        <div class="form-group">
                            @*<label for="dug">Provincia: </label>*@
                            <InputText id="provincia" class="form-control" @bind-Value="@Anagrafica.Provincia" placeholder="Provincia"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.Provincia)" />
                        </div>

                        <div class="form-group">
                            @*<label for="dug">Nazione: </label>*@
                            <InputText id="nazione" class="form-control" @bind-Value="@Anagrafica.Stato" placeholder="Nazione"></InputText>
                            <ValidationMessage For="@(() => Anagrafica.Stato)" />
                        </div>


                        <button type="submit" class="btn btn-primary">Salva anagrafica</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}